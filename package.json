{
  "name": "hydra-ts",
  "license": "AGPL",
  "version": "1.0.0",
  "description": "A fork of ojack/hydra-synth in typescript, focusing on interoperability.",
  "main": "index.js",
  "types": "index.d.ts",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "dev": "vite",
    "coverage": "nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/folz/hydra-ts.git"
  },
  "keywords": [
    "webgl",
    "regl",
    "graphics",
    "livecoding",
    "synth"
  ],
  "author": "folz",
  "bugs": {
    "url": "https://github.com/folz/hydra-ts/issues"
  },
  "homepage": "https://github.com/folz/hydra-ts#readme",
  "dependencies": {
    "regl": "^1.3.9"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/gl": "^4.1.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "eslint": "^7.32.0",
    "gl": "^4.9.2",
    "jest": "^27.3.1",
    "jest-environment-jsdom": "^27.3.1",
    "jest-environment-jsdom-global": "^3.0.0",
    "jsdom": "^17.0.0",
    "jsdom-global": "^3.0.2",
    "nyc": "^14.1.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4",
    "vite": "^2.6.10"
  },
  "nyc": {
    "include": [
      "src/**/*.js",
      "index.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "cache": false
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testEnvironment": "jest-environment-jsdom-global"
  }
}
