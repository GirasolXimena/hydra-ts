{
  "name": "hydra-synth",
  "license": "AGPL",
  "version": "1.3.8",
  "description": "base synth for hydra-editor",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "dev": "vite",
    "build-hydra": "browserify hydra-synth.js --standalone Hydra > dist/hydra-synth.js",
    "build-shader-generator": "browserify shader-generator.js --standalone HydraShaders > dist/hydra-shaders.js",
    "build": "npm run build-hydra",
    "coverage": "nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ojack/hydra-synth.git"
  },
  "keywords": [
    "webgl",
    "regl",
    "graphics",
    "livecoding",
    "synth"
  ],
  "unpkg": "dist/hydra-synth.js",
  "author": "ojack",
  "bugs": {
    "url": "https://github.com/ojack/hydra-synth/issues"
  },
  "homepage": "https://github.com/ojack/hydra-synth#readme",
  "dependencies": {
    "regl": "^1.3.9"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/gl": "^4.1.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^16.2.3",
    "eslint": "^7.26.0",
    "eslint-plugin-mocha": "^8.1.0",
    "gl": "^4.4.0",
    "glslify": "^6.3.1",
    "jest": "^27.2.0",
    "jest-environment-jsdom": "^27.2.0",
    "jest-environment-jsdom-global": "^3.0.0",
    "jsdom": "^17.0.0",
    "jsdom-global": "^3.0.2",
    "nyc": "^14.1.1",
    "prettier": "^2.3.0",
    "rewire": "^4.0.1",
    "rtc-patch-bay": "^1.0.0",
    "sinon": "^7.5.0",
    "typescript": "^4.4.2",
    "vite": "^2.6.2"
  },
  "nyc": {
    "include": [
      "src/**/*.js",
      "index.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "cache": false
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "setupFilesAfterEnv": [
      "./test/jest.setup.js"
    ],
    "testEnvironment": "jest-environment-jsdom-global"
  }
}
